<%= form_with(model: post, local: true) do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group row">
    <%= form.label :title, class: 'offset-sm-2 col-sm-2 col-form-label' %>
    <div class="col-sm-6">
      <%= form.text_field :title, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :image, class: 'offset-sm-2 col-sm-2 col-form-label' %>
    <div class="col-sm-6">
      <%= form.file_field :image %>
    </div>
  </div>

  <%= form.submit 'Confirm Post', class: 'btn btn-primary my-2' %>
  <%= link_to 'Back', posts_path, class: 'btn btn-secondary my-2' %>
<% end %>
