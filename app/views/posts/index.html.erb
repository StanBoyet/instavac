
<section class="jumbotron text-center">
  <div class="container">
    <h1 class="jumbotron-heading">My Instavacs</h1>
    <p class="lead text-muted">This is what I want people to think my life is like. ðŸ¤«</p>
    <p>
      <%= link_to 'New Post', new_post_path, class: 'btn btn-primary my-2' %>
    </p>
  </div>
</section>

<div class="album py-5 bg-light">
  <div class="container">
    <div class="row">
      <% @posts.each do |post| %>
        <div class="col-md-4">
          <div class="card mb-4 shadow-sm">
            <%= image_tag(post.image, style: "height: 225px; width: 100%; display: block;") %>
            <div class="card-body">
              <p class="card-title"><%= post.title %></p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <%= link_to 'View', post, class: 'btn btn-sm btn-outline-primary' %>
                  <%= link_to 'Edit', edit_post_path(post), class: 'btn btn-sm btn-outline-secondary' %>
                  <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-outline-danger' %>
                </div>
                <small class="text-muted"><%= time_ago_in_words(post.created_at) %></small>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>