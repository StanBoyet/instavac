<!DOCTYPE html>
<html>
  <head>
    <title>Instavac</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta name="description" content="I share therefore I am" />

    <!-- Twitter Card data -->
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:site" content="@instavac" />
    <meta name="twitter:title" content="<%= yield(:post_title) %>" />
    <meta name="twitter:image" content="<%= yield(:post_twitter_share_url) %>" />
    <meta name="twitter:image:src" content="<%= yield(:post_twitter_share_url) %>">
    <meta name="twitter:creator" content="@instavac" />

    <!-- Open Graph data -->
    <meta property="og:title" content="<%= yield(:post_title) %>" />
    <meta property="og:type" content="article" />
    <meta property="og:url" content="<%= yield(:post_url) %>" />
    <meta property="og:image" content="<%= yield(:post_facebook_share_url) %>" />

    <!-- Load Facebook SDK for JavaScript -->
    <div id="fb-root"></div>
    <script>(function(d, s, id) {
      var js, fjs = d.getElementsByTagName(s)[0];
      if (d.getElementById(id)) return;
      js = d.createElement(s); js.id = id;
      js.src = "https://connect.facebook.net/en_US/sdk.js#xfbml=1&version=v3.0";
      fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'facebook-jssdk'));</script>


    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render 'layouts/header' %>
    <div class="main">
      <%= yield %>
    </div>
  </body>
</html>
